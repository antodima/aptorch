{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"INSTALL_DEV_TOOLS": "yes",
			"POETRY_VERSION": "1.8.2",
			"POETRY_CORE_VERSION": "1.9.0",
			"POETHEPOET_VERSION": "0.25.0",
			"PRE_COMMIT_VERSION": "3.6.2"
		}
	},
	"runArgs": [
		// "--gpus",
		// "all"
	],
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	// "features": {},
	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Configure the settings to use for VS Code.
			"settings": {
				"editor.rulers": [
					79
				],
				"python.languageServer": "None",
				// autoDocstring settings
				"autoDocstring.docstringFormat": "numpy",
				"autoDocstring.includeName": true,
				"autoDocstring.includeExtendedSummary": true,
				// todohighlight settings
				"todohighlight.include": [
					"**/*.py"
				],
				// pytest settings
				"python.testing.pytestArgs": [
					"tests"
				],
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				// terminal settings
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"args": [
							"-l"
						]
					}
				}
			},
			"extensions": [
				"ms-python.python",
				"njpwerner.autodocstring",
				"ms-python.autopep8",
				"mhutchie.git-graph",
				"tamasfe.even-better-toml",
				"wayou.vscode-todo-highlight",
				"vscode-icons-team.vscode-icons",
				"ms-toolsai.jupyter",
				"charliermarsh.ruff"
			]
		}
	},
	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "chmod -R +x ./.devcontainer && ./.devcontainer/post-create-command.sh",
	// Use 'postStartCommand' to run commands after the container is started.
	"postStartCommand": "./.vscode/scripts/startup.sh"
}